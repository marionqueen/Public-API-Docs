{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0",
    "description": "Documentation for your API endpoints",
    "contact": {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  },
  "servers": [
    {
      "url": "https://your-production-api.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "LoanStatus": {
        "type": "string",
        "enum": [
          "pending",
          "reviewed",
          "approved",
          "rejected"
        ],
        "description": "Represents the possible states of a loan application"
      },
      "Loan": {
        "type": "object",
        "required": [
          "userId",
          "amount",
          "purpose",
          "status",
          "createdAt"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the loan"
          },
          "userId": {
            "type": "string",
            "description": "ID of the user who applied for the loan"
          },
          "amount": {
            "type": "number",
            "format": "float",
            "description": "The requested loan amount"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose or reason for the loan"
          },
          "status": {
            "$ref": "#/components/schemas/LoanStatus"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the loan application was created"
          },
          "reviewedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the loan was reviewed"
          },
          "approvedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the loan was approved"
          },
          "riskScore": {
            "type": "number",
            "format": "float",
            "description": "Risk assessment score calculated for the loan"
          }
        },
        "example": {
          "id": "123e4567-e89b-12d3-a456-426614174000",
          "userId": "user_abc123",
          "amount": 5000,
          "purpose": "Home renovation",
          "status": "pending",
          "createdAt": "2023-01-15T09:30:00Z"
        }
      },
      "LoanRequest": {
        "type": "object",
        "required": [
          "userId",
          "amount",
          "purpose"
        ],
        "properties": {
          "userId": {
            "type": "string",
            "description": "ID of the user applying for the loan"
          },
          "amount": {
            "type": "number",
            "format": "float",
            "description": "The requested loan amount"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose or reason for the loan"
          }
        },
        "example": {
          "userId": "user_abc123",
          "amount": 5000,
          "purpose": "Home renovation"
        }
      },
      "LoanResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the loan"
          },
          "userId": {
            "type": "string",
            "description": "ID of the user who applied for the loan"
          },
          "amount": {
            "type": "number",
            "format": "float",
            "description": "The requested loan amount"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose or reason for the loan"
          },
          "status": {
            "type": "string",
            "description": "Current status of the loan application"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the loan application was created"
          },
          "reviewedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the loan was reviewed"
          },
          "approvedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the loan was approved"
          },
          "riskScore": {
            "type": "number",
            "format": "float",
            "description": "Risk assessment score calculated for the loan"
          }
        },
        "example": {
          "id": "123e4567-e89b-12d3-a456-426614174000",
          "userId": "user_abc123",
          "amount": 5000,
          "purpose": "Home renovation",
          "status": "pending",
          "createdAt": "2023-01-15T09:30:00Z"
        }
      },
      "ApiResponse": {
        "type": "object",
        "required": [
          "status"
        ],
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "success",
              "error"
            ],
            "description": "Indicates if the operation was successful"
          },
          "data": {
            "type": "object",
            "description": "Contains the successful operation's return data"
          },
          "message": {
            "type": "string",
            "description": "Success message or additional context"
          },
          "error": {
            "type": "string",
            "description": "Contains error details when status is 'error'"
          },
          "code": {
            "type": "string",
            "description": "Used for specific error identification"
          }
        },
        "example": {
          "status": "success",
          "data": {
            "id": "123",
            "status": "pending"
          },
          "message": "Loan application submitted successfully"
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "status",
          "error"
        ],
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "error"
            ],
            "description": "Always 'error' for error responses"
          },
          "message": {
            "type": "string",
            "description": "Error message describing what went wrong"
          },
          "code": {
            "type": "string",
            "description": "Error code for client-side error handling"
          }
        },
        "example": {
          "status": "error",
          "message": "Loan application not found",
          "code": "LOAN_NOT_FOUND"
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/v1/admin/users/{uid}/role": {
      "put": {
        "summary": "Set user role (admin only)",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "uid",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": [
                      "user",
                      "officer",
                      "manager",
                      "admin"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User role updated successfully"
          },
          "403": {
            "description": "Not authorized to perform this action"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/v1/admin/users/{uid}": {
      "get": {
        "summary": "Get user details (admin only)",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "uid",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User details retrieved successfully"
          },
          "403": {
            "description": "Not authorized to perform this action"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/v1/loans": {
      "post": {
        "summary": "Create a new high-risk loan application",
        "tags": [
          "Loans"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoanRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Loan application created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoanResponse"
                }
              }
            }
          },
          "400": {
            "description": "Missing required fields"
          }
        }
      },
      "get": {
        "summary": "Get all loan applications (restricted to officers and managers)",
        "tags": [
          "Loans"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of loan applications retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LoanResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/loans/{id}/review": {
      "put": {
        "summary": "Review a loan application (restricted to officers)",
        "tags": [
          "Loans"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Loan application reviewed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoanResponse"
                }
              }
            }
          },
          "404": {
            "description": "Loan application not found"
          }
        }
      }
    },
    "/api/v1/loans/{id}/approve": {
      "put": {
        "summary": "Approve a loan application (restricted to managers)",
        "tags": [
          "Loans"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Loan application approved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoanResponse"
                }
              }
            }
          },
          "404": {
            "description": "Loan application not found"
          }
        }
      }
    }
  },
  "tags": []
}